<%= javascript_tag do %>
  $(document).ready(function(){
     var container_width = $('.container').width();
     $('.full-square-image').height(container_width);
     $('.auto-rotate').slick({
        arrows: false,
        dots: true,
        infinite: true,
        speed: 500,
        fade: true,
        adaptiveHeight: true,
        mobileFirst: true,
        cssEase: 'linear'
     });
   });
