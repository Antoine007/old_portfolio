<%= javascript_tag do %>
  function pulseSeconds() {
      var secs = <%= t.sec %>
      $('.seconds').fadeOut(500, function(){ $(this).text(secs); $(this).delay(100).fadeIn(500); });
  }

  setInterval(pulseSeconds, 1000);
<% end %>
