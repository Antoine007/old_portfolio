- @colours.each do |colour, name|
  .col-xs-6.col-sm-4.col-lg-3.col-xs-2{style: "background-color:##{colour}; min-height: 20vh;", "data-toggle": "tooltip", "data-placement": "bottom", title: "##{colour}"}
    = name

=content_for :after_js do

  =javascript_tag do
    $(document).ready(function(){
    $('footer').hide();
    $('[data-toggle="tooltip"]').tooltip()
    });

